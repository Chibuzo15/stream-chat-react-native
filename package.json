{
  "name": "root",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/GetStream/stream-chat-react-native.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "semantic-release": "^17.4.4",
    "semantic-release-monorepo": "^7.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dotgit/hooks/pre-commit-format.sh && dotgit/hooks/pre-commit-reject-binaries.py",
      "commit-msg": "npx commitlint --edit $1"
    }
  },
  "scripts": {
    "postinstall": "patch-package",
    "lerna": "lerna",
    "release-dry": "lerna exec \"yarn semantic-release --dry-run\"",
    "release": "lerna exec \"yarn semantic-release\""
  },
  "dependencies": {
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0"
  }
}
